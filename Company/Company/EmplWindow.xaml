<Window x:Class="Company.EmplWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company"
        mc:Ignorable="d"
        Title="Change" Height="300" Width="300">
    <Grid>
        <StackPanel x:Name="mainStackPanel" Orientation="Vertical">
            <TextBox x:Name="EmplData">Сотрудник</TextBox>

            <TextBox x:Name="txtName" MaxLength="250" Margin="10" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtAge" MaxLength="3" Margin="10"   Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="txtSal" MaxLength="250" Margin="10"  Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox x:Name="cbDep"  ItemsSource="{Binding Path=Comp.ListDep}" Text="{Binding NameDep}"/>

            <Button x:Name="btnSave" Margin="10" Content="Сохранить" Click="btnSave_Click"/>


            <TextBox x:Name="txtError"  Margin="10" Visibility="Hidden">Неверные данные</TextBox>

        </StackPanel>
    </Grid>
</Window>
