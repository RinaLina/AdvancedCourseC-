<Window x:Class="Company.DepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company"
        mc:Ignorable="d"
        Title="DepWindow" Height="300" Width="300">
    <Grid>
       <StackPanel Orientation="Vertical">
            <TextBox x:Name="EmplData">Департамент</TextBox>

            <TextBox x:Name="txtName" MaxLength="250" Margin="10">Введите название</TextBox>

            <Button x:Name="btnSave" Margin="10" Content="Сохранить" Click="btnSave_Click"/>
            <Button x:Name="btnDepDef" Visibility="Hidden" Margin="10" Content="Добавить дефолтный" Click="btnDepDef_Click"/>

        </StackPanel>
    </Grid>
</Window>
